

<MudTextField Value="@DeviceServices.GetGPIOValue()"
              Label="GPIO Number"
              Variant="Variant.Outlined"
              Adornment="Adornment.End"
              AdornmentColor="Color.Warning"
              AdornmentIcon="@Icons.Material.Filled.Settings"
              OnAdornmentClick="OnSetValue" 
              ReadOnly>
          
          </MudTextField>

@code {
    #region Parameters
    [Parameter]
    public IDeviceServices DeviceServices { get; set; }
    #endregion


    #region Function
    /// <summary>
    /// Used to initialize a component for the entire lifetime of the component instance
    /// </summary>
    protected override void OnInitialized()
    {
        DeviceServices.OnStateChanged += StateHasChanged;
    }

    /// <summary>
    /// Send GPIO value to the device
    /// </summary>
    /// <returns></returns>
    async Task OnSetValue()
    {
        await DeviceServices.SetGPIOValueShowDialog();
    }
    #endregion
}
